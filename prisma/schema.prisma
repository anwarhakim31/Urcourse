generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}


model User{
  id String @id @default(uuid())
  email String @unique 
  fullname String 
  password String
  phone Int? @db.Integer
  photo String?
  isAdmin Boolean @default(false)
  createdAt DateTime @default(now())

  @@map("users")
}

model resetToken{
  id String @id @default(uuid())
  user String 
  expired Int
  createdAt DateTime @default(now())

  @@map("resetToken")
}